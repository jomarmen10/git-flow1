<!DOCTYPE html>
<html>

<head>
  <!--Import Google Icon Font-->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <!-- Compiled and minified CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  <!--Let browser know website is optimized for mobile-->
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Register</title>
</head>

<body>
  <!-- header start -->
  <header>
    <nav>
      <div class="nav-wrapper blue-grey darken-3">
        <a href="/" class="brand-logo center">Money Team</a>
        <ul class="left hide-on-med-and-down">
          <li><a href="/">back</a></li>
        </ul>
      </div>
    </nav>
  </header>
  <!-- header end -->

  <!-- main start -->
  <main>
    <div class="container register-container">

      <div class="container login-container" id="register">
        <h1>Register</h1>
        <small><%=message%></small>

        <form action="/auth/register" method="POST">

          <div class="input-field">
            <input type="text" name="name">
            <label class="active" for="name">Name</label>
          </div>

          <div class="input-field">
            <input type="text" name="username">
            <label class="active" for="username">Username</label>
          </div>

          <div class="input-field">
            <input id="email" type="email" class="validate" name="email">
            <label for="email">Email</label>
            <span class="helper-text" data-error="wrong" data-sucess="right"></span>
          </div>

          <div class="input-field">
            <input type="password" name="password">
            <label class="active" for="password">Password</label>
          </div>

          <div>
            <button class="btn-small waves-effect waves-light blue darken-4" type="submit">Register</button>
          </div>

        </form>
      </div>

    </div>
  </main>
  <!-- main start -->

</body>

</html>
