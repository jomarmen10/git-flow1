<!DOCTYPE html>
<html>

<head>
  <!--Import Google Icon Font-->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <!-- Compiled and minified CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  <!--Let browser know website is optimized for mobile-->
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/sliderStyle.css">
  <script defer type="text/javascript" src="/js/map.js"></script>
  <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCTAH_yPmSaWOZnxvuNU157kgFdo0D8kaI&callback=initMap"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.0/jquery.js"></script>
  <script src="https://unpkg.com/axios/dist/axios.min.js" defer></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js" defer></script>
  <title></title>
</head>

<body>
<!-- header -->
  <header>
    <div class="header">
      <nav>
        <div class="nav-wrapper blue-grey darken-3">
          <a href="/" class="brand-logo center">The Money Team</a>
          <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
          <% if(logged){%>
          <ul class="right hide-on-med-and-down">
            <li><a href="/realtor/<%=profileId%>">profile</a></li>
            <li><a href="/auth/logout">Logout</a></li>
          </ul>
          <% } else {%>
          <ul class="left hide-on-med-and-down">
            <li><a class="waves-effect blue darken-4 btn" href="/auth/login">Register<i class="material-icons">contacts</i></a></li>
          </ul>
          <ul class="right hide-on-med-and-down">
            <form action="/auth/login" method="POST">
              <div class="right-align">
                <li><input type="text" name="username" placeholder="username"></li>
                <li><input type="password" name="password" placeholder="password"></li>
                <button class="btn waves-effect blue darken-4" type="submit" name="action">Login</button>
                <small><%=message%></small>
              </div>
            </form>
          </ul>
          <%}%>
        </div>
      </nav>
    </div>
  </header>

<!-- header end -->


<!-- list of houses -->
  <main>
    <div class="row">
      <%for(let i = 0; i < houses.length; i++) {%>
        <div class="col s6">
          <div class="flexbox">
            <div class="card small">
              <div class="card-image">
                <a href="<%= houses[i]._id%>">
                  <img src="<%= houses[i].img%>">
                </a>
              </div>
              <div class="card-content">
                <p>
                  <%= houses[i].type %> | <%= houses[i].price %> | <%= houses[i].rooms %>
                  <br />
                  <%= houses[i].address %>
                </p>
              </div>
            </div>
          </div>
        </div>
      <%}%>
    </div>
  </main>
<!-- list of houses end -->


<!-- map -->
  <div class="col s6">
    <div id="map"></div>
    </section>
  </div>
  <!-- map end -->

  <!-- footer -->

  <footer>
    <div class="footer-copyright blue-grey darken-3">
      <div class="container center">
        Â© 2019 Money Team
      </div>
    </div>
  </footer>
  <!-- footer end -->

</body>

</html>
